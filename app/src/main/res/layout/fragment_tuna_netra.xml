<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@mipmap/bg_tunanetra_allbooks_extend"
android:orientation="vertical"
android:weightSum="3"
tools:context=".fragment.TunaNetraFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="21 / 03 / 2018" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        tools:text="Dina Septina" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        tools:text="Psikologi" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@id/btn_pause"
        android:background="@drawable/circle_button"
        android:elevation="16dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_stop_red_24dp"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@id/btn_pause" />

    <ImageButton
        android:id="@+id/btn_pause"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_button"
        android:elevation="16dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_pause_blue_24dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/btn_pause"
        android:background="@drawable/circle_button"
        android:elevation="16dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_replay_red_24dp" />
</RelativeLayout>
</LinearLayout>