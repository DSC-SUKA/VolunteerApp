<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@drawable/curve_corner_bg"
    android:elevation="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragment.logout_alert">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="12dp"
        android:src="@drawable/ic_alert_dialog" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="Alert"
        android:textColor="#f1c40f"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:gravity="center"
        android:text="Are you sure to logout from this app?"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_green_background"
            android:text="Yes"
            android:textColor="@color/buttonPositive" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_discard_background"
            android:text="@string/no"
            android:textColor="@color/buttonDisabled" />
    </LinearLayout>


</LinearLayout>